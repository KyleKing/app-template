{
  "name": "deno-template",
  "version": "0.0.0",
  "exports": "./src/templates/engine.ts",
  "compilerOptions": {
    "strict": true
  },
  "nodeModulesDir": "auto",
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    },
    "exclude": [
      "**/*.min.js"
    ]
  },
  "fmt": {
    "exclude": [
      "**/*.min.js"
    ],
    "indentWidth": 2,
    "lineWidth": 120,
    "proseWrap": "preserve",
    "semiColons": false,
    "useTabs": false
  },
  "bench": {
    "include": [
      "**/*_bench.ts"
    ]
  },
  "test": {},
  "tasks": {
    "bench": "LOG_LEVEL=error deno bench --allow-read --allow-write --allow-env --allow-ffi --allow-sys --check",
    "check": "deno check --frozen",
    "compile": "deno compile --allow-net --allow-read --allow-write --allow-env --allow-ffi --check --lock --output dist/deno-template scripts/app-server.ts",
    "dev": "deno run --allow-net --allow-sys --allow-read --allow-write --allow-env --allow-ffi scripts/app-server.ts",
    "fmt": "deno fmt --unstable-component",
    "prod": "deno task compile && NODE_ENV=production ./dist/deno-template",
    "test": "deno test --allow-sys --allow-read --allow-write --allow-env --allow-ffi --check=all",
    "test:cov": "deno task test --clean --coverage=coverage && deno coverage coverage",
    "test:e2e": "deno run --allow-all npm:playwright test",
    "test:e2e:install": "deno install && deno run --allow-all npm:playwright install",
    "test:e2e:ui": "deno task test:e2e --debug --project=firefox",
    "test:watch": "deno task test --trace-leaks --watch"
  },
  "imports": {
    "@/": "./src/",
    "@logtape/logtape": "jsr:@logtape/logtape@^1.1.0-dev.337+e8eb9c7d",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@playwright/test": "npm:@playwright/test@^1.55.0",
    "hono": "npm:hono@4.9.6",
    "nanoid": "npm:nanoid@5.1.5",
    "vento/": "https://deno.land/x/vento@v2.0.1/"
  }
}
